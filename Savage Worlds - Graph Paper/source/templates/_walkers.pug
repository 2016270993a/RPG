input(type='checkbox',
      name='attr_toggle-walkers-block',
      checked=false,
      class='sheet-toggle sheet-toggle--block')
      
.sheet-block.sheet-walkers
  .sheet-header
    .sheet-header__title.sheet-walkers__name
      span(name='attr_rename-block-walkers') Walkers
    .sheet-header__labels
      .sheet-walkers__size Size
      .sheet-walkers__pace Pace
      .sheet-walkers__strength Strength
      .sheet-walkers__toughness Tough.
      .sheet-walkers__mods Mods
      .sheet-walkers__crew Crew
      .sheet-walkers__weapons Weap.

  input(type='checkbox',
        name='attr_walkers-visibility-toggle',
        checked=true,
        class='sheet-toggle sheet-toggle--visibility')

  fieldset.repeating_walkers
    .sheet-repitem
      .sheet-repitem__primary
        input(type='text',
              name='attr_walker-name',
              placeholder='Walker Type',
              spellcheck='false',
              class='sheet-align-left sheet-walkers__name sheet-stretch')
              
        input(type='text',
              name='attr_walker-size',
              placeholder='1',
              spellcheck='false',
              class='sheet-walkers__size')
              
        input(type='text',
              name='attr_walker-pace',
              placeholder='6',
              spellcheck='false',
              class='sheet-walkers__pace')
              
        input(type='text',
              name='attr_walker-strength',
              placeholder='d12+4',
              spellcheck='false',
              class='sheet-walkers__strength')

        input(type='text',
              name='attr_walker-toughness',
              placeholder='20 (5)',
              spellcheck='false',
              class='sheet-walkers__toughness')
              
        input(type='text',
              name='attr_walker-mods',
              placeholder='0/20',
              spellcheck='false',
              class='sheet-walkers__mods')
              
        input(type='text',
              name='attr_walker-crew',
              placeholder='1',
              spellcheck='false',
              class='sheet-walkers__crew')
              
        input(type='text',
              name='attr_walker-weapons-count',
              placeholder='0',
              spellcheck='false',
              class='sheet-walkers__weapons')

      input(type='checkbox',
            name='attr_walker-notes-toggle',
            class='sheet-toggle sheet-toggle--arrow')
            
      .sheet-repitem__frame
        .sheet-repitem__frame-silhouette
                
        .sheet-repitem__frame-build
          textarea(name='attr_walker-build',
                   placeholder='Chassis | Modifications, Notes, etc.',
                   spellcheck='false')
                   
      input(type='hidden',
            name='attr_walker-weapons-count',
            value='0',
            class='sheet-hidden sheet-repitem__weapons-control')
           
      .sheet-repitem__weapons
        .sheet-header
          .sheet-header__labels
            .sheet-repitem__weapons-name Weapon
            .sheet-repitem__weapons-damage AP Damage
            .sheet-repitem__weapons-damage HE Damage
            .sheet-repitem__weapons-range Range
            .sheet-repitem__weapons-rof ROF

        - var i = 0

        while i < 10
          - ++i
          .sheet-repitem__subitem(class='sheet-repitem__subitem--' + i)
            .sheet-repitem__primary
              input(type='text',
                    name='attr_walker-weapon-' + i + '-name',
                    placeholder='Walker Weapon #' + i,
                    spellcheck='false',
                    class='sheet-align-left sheet-repitem__weapons-name  sheet-stretch')
                    
              input(type='text',
                    name='attr_walker-weapon-' + i + '-ap-damage',
                    placeholder='3d10, AP 8',
                    spellcheck='false',
                    class='sheet-repitem__weapons-damage')
                    
              input(type='text',
                    name='attr_walker-weapon-' + i + '-he-damage',
                    placeholder='3d8, AP 4, MBT',
                    spellcheck='false',
                    class='sheet-repitem__weapons-damage')
                    
              input(type='text',
                    name='attr_walker-weapon-' + i + '-range',
                    placeholder='50/100/200',
                    spellcheck='false',
                    class='sheet-repitem__weapons-range')
                    
              input(type='text',
                    name='attr_walker-weapon-' + i + '-rof',
                    placeholder='1',
                    spellcheck='false',
                    class='sheet-repitem__weapons-rof')
                    
              input(type='checkbox',
                    name='attr_walker-weapon-note-box-toggle-' + i,
                    class='sheet-toggle sheet-toggle--note-box')
                    
              .sheet-repitem__note-box
                textarea(name='attr_walker-weapon-note-box-' + i,
                         placeholder='NOTES',
                         spellcheck='false')
                  
            input(type='checkbox',
                  name='attr_walker-weapon-' + i + '-notes-toggle',
                  class='sheet-toggle sheet-toggle--arrow')
                  
            .sheet-repitem__secondary
              .sheet-repitem__note-label Notes:
              input(type='text',
                    name='attr_walker-weapon-' + i + '-notes',
                    placeholder='Notes, Tags, Trappings, etc.',
                    spellcheck='false',
                    class='sheet-align-left sheet-repitem__note  sheet-stretch')
                        
  .sheet-footer
