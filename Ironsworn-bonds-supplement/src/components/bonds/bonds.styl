input[type="checkbox"].sheet-show-bond-links
  width 4.5em
  height 18px
  top 0
  opacity 0
  border-radius 4px
  padding 2px 4px
  &:checked
    & ~ div
      &.sheet-show-bond-links
        display flex
        flex-flow row wrap
        height 32em !important
        show-hide()
    & ~ span
      &.sheet-show-bond-links
        border-radius 4px
        padding 2px 4px
        border 1px solid
        background-color #4C4D4F
        color #fff
  &:hover
    & ~ span
      &.sheet-show-bond-links
        border-radius 4px
        padding 2px 4px
        background-color #ccc
        color #4c4d4f
        transition 0.5s ease

.sheet-show-bond-links
  display none

.sheet-links
  margin-top 1em
  display flex
  justify-content space-between
  width 100%

.sheet-link
  width 32.5%

div.bond-title
  text-align center
  color #4c4d4f
  padding 0.1em
  text-transform uppercase

.sheet-link-box-back
  text-align center

.sheet-link-box-input:hover ~ .sheet-link-box-back
  background #ccc
  transition .5s ease

.sheet-link-box-input:checked ~ .sheet-link-box-back
  background #4C4D4F
  color white
  transition .5s ease

.sheet-link-label
  cursor pointer

.sheet-link-container
  margin-bottom 1em

.sheet-link-box
  border 2px solid #4c4d4f
  margin-top 0.2em
  label
    padding 0
    margin 0

label.sheet-link-button
  border 2px solid
  padding 0
  margin 0
  width auto
  font-size 14px
  cursor pointer

.sheet-link-details
  padding 1em
  border 2px solid #4c4d4f
  height 22em
  width 18em

input.sheet-link-button:checked ~ .sheet-link-button-back:after
  content 'Primary'

.sheet-link-button-back span
  display none

.sheet-link-button-back:after
  content 'Secondary'

.sheet-individual-nav
  display flex
  justify-content space-between

.sheet-bond-details-btn
  display flex
  width 49%
  margin 0.5em 0em 0em 0em
  height auto
  padding 0
  font-size: 14px
  border 2px solid #4c4d4f
  cursor pointer

.sheet-link-title
  width 100%
  
.sheet-link-flip
  transform-origin center
  transform-style preserve-3d
  -webkit-transform-style preserve-3d
  
  transition all 0.6s
  -webkit-transition all 0.6s
  
  transition-timing-function ease-in-out
  -webkit-transition-timing-function ease-in-out

.sheet-link-side
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  backface-visibility hidden
  overflow visible

input.sheet-link-flip-front:checked ~ div.sheet-link-flip-front
  height: 27.5em;
  visibility visible
  transform rotateY( 0deg )

input.sheet-link-flip-back:checked ~ div.sheet-link-flip-back
  height: 27.5em;
  visibility visible
  transform rotateY( 0deg )

.sheet-link-front
  transform rotateY( 180deg )
  height 0
  visibility hidden
  position absolute

.sheet-link-back
  transform rotateY( 180deg )
  height 0
  visibility hidden
  position absolute

.sheet-filler-link
  height: 26em
  width: 22em
  border 2px solid #4c4d4f
  background-image: url("paper.gif");
