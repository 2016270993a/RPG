div.sheet-delve-modes
  display none

input[type=radio].sheet-delve-modes:checked ~ div.sheet-delve-modes
  display block

input[type=radio].sheet-delve-summary:checked ~ div.sheet-delve-summary,
input[type=radio].sheet-delve-assets:checked ~ div.sheet-delve-assets,
input[type=radio].sheet-delve-bonds:checked ~ div.sheet-delve-bonds,
input[type=radio].sheet-delve-moves:checked ~ div.sheet-delve-moves,
input[type=radio].sheet-delve-oracles:checked ~ div.sheet-delve-oracles,
input[type=radio].sheet-delve-progress:checked ~ div.sheet-delve-progress,
input[type=radio].sheet-delve-sites:checked ~ div.sheet-delve-sites,
input[type=radio].sheet-delve-vows:checked ~ div.sheet-delve-vows
  display: block
