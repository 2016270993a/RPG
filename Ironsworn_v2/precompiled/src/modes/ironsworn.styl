div.sheet-ironsworn-modes,
  display none

input[type=radio].sheet-ironsworn-modes:checked ~ div.sheet-ironsworn-modes
  display block

input[type=radio].sheet-ironsworn-assets:checked ~ div.sheet-ironsworn-assets,
input[type=radio].sheet-ironsworn-bonds:checked ~ div.sheet-ironsworn-bonds,
input[type=radio].sheet-ironsworn-moves:checked ~ div.sheet-ironsworn-moves,
input[type=radio].sheet-ironsworn-oracles:checked ~ div.sheet-ironsworn-oracles,
input[type=radio].sheet-ironsworn-progress:checked ~ div.sheet-ironsworn-progress,
input[type=radio].sheet-ironsworn-summary:checked ~ div.sheet-ironsworn-summary,
input[type=radio].sheet-ironsworn-vows:checked ~ div.sheet-ironsworn-vows
  display: block
