- var legacyVows = [ 1, 2, 3, 4, 5 ]
include ../../components/vows/vow-container

div.sheet-page-container
  input(type='radio' name='attr_character_page' class='sheet-vows sheet-hide' value='2')
  div.sheet-vows.sheet-showhide
    h3.sheet-divide &emsp;VOWS&emsp;
    div.sheet-vows
      each vow in legacyVows
        +vowLegacy(vow)
      fieldset.repeating_vow
        +repeatingVow()