mixin btn(opts)
  if opts.classes
    label(class=`sheet-common-btn ${opts.classes}`)
      if opts.pure_attr
        input.sheet-btn-input.sheet-hide(type=opts.type name=`attr_${opts.attribute}`)
      else
        if opts.checked
          input.sheet-btn-input.sheet-hide(type=opts.type name=`attr_${opts.attribute}_button` checked)
        else
          input.sheet-btn-input.sheet-hide(type=opts.type name=`attr_${opts.attribute}_button`)
      .sheet-btn-content=opts.text
  else
    label.sheet-common-btn
      input.sheet-btn-input.sheet-hide(type=opts.type name=`attr_${opts.attribute}_button`)
      .sheet-btn-content=opts.text