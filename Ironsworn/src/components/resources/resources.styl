.sheet-resources
  display flex
  height 2em

.sheet-resource
  display flex
  margin-right 0.25em

label
  &.sheet-health-reset
    font-size 14px
    borderCommon()
    margin 0
    padding 2px 7px 2px 6px
    cursor pointer
    &:hover
      background #ccc
      transition 0.5s ease

h3
  &.sheet-health-max
    font-size 14px
    margin-right 0.3em
    line-height 23px
    padding-left 0.3em
  &.sheet-health-max-value
    padding-right 0.3em

.sheet-health-max-value
  font-size 14px
  line-height 22px
  color #555

.sheet-resource-value
  font-size 14px
  width 38px
  font-weight bold
  padding 0
  padding-left 4px
  border-radius 0
  background #ccc
  borderCommon()
  margin 0
  height auto
  cursor pointer
  border-left 1px solid
  &:focus
    input-highlight(3px)

.sheet-resource-title
  font-size 14px
  width auto
  borderCommon()
  line-height 9px
  padding 0.5em 0.5em 0.5em 0.5em
  border-right 1px solid

input[type=text].sheet-resource-value
  width 22px
  border none
  cursor text

.sheet-health-max-box
  display flex
  background #ccc

.sheet-health-status-box
  display flex
  borderCommon()

.sheet-load-value
  width 27px

.sheet-character-name
  width 14.8em !important
  border none
