//-PC SHEET
  =============================
.grid.tabs
  .col.sheet-type.grid
    each val in ['character', 'holdings', 'entourage']
      label(data-i18n-title=`sheet: ${val}`)
        if val === 'character'
          input(name=`attr_sheet_type` title=`@{sheet_type}` type='radio' value=val selected)
          span.text-capitalize.text-center(data-i18n=`${val}`)
        else
          input(name=`attr_sheet_type` title=`@{sheet_type}` type='radio' value=val)
          span.text-capitalize.text-center(data-i18n=`${val}`)
    label.settings(data-i18n-title=`sheet: settings`)
      input(name=`attr_sheet_type` title=`@{sheet_type}` type='radio' value='settings')
      span.pictos.text-lowercase.text-center y

  .col
    select(name='attr_feast_type' value='feast')
      option(data-i18n='feast record' value='record' selected)
      option(data-i18n='gamemaster characters' value='characters')

