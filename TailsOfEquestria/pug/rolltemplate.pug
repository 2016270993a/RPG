rolltemplate.sheet-rolltemplate-toe
  table
    thead: tr: th {{charName}} &#x21D2; {{attr}}
    tbody
      tr: td Result {{result}}
      
      | {{#upgrade}}
      tr: td.upgrade
        span Upgrade:
        span {{upgrade}}
      | {{/upgrade}}
      
      | {{#downgrade}}
      tr: td.downgrade
        span Downgrade:
        span {{downgrade}}
      | {{/downgrade}}
      
      | {{#notes}}
      tr: td.notes
        div Notes:
        div {{notes}}
      | {{/notes}}
