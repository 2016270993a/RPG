input[type="checkbox"].sheet-show-bond-links
  width 4.5em
  height 18px
  top 0
  opacity 0
  border-radius 4px
  padding 2px 4px
  &:checked
    & ~ div
      &.sheet-show-bond-links
        display flex
        flex-flow row wrap
        show-hide()
    & ~ span
      &.sheet-show-bond-links
        border-radius 4px
        padding 2px 4px
        border 1px solid
        background-color #4C4D4F
        color #fff
  &:hover
    & ~ span
      &.sheet-show-bond-links
        border-radius 4px
        padding 2px 4px
        background-color #ccc
        color #4c4d4f
        transition 0.5s ease
