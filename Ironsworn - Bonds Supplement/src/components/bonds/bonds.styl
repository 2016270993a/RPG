input[type="checkbox"].sheet-show-bond-links
  width 4.5em
  height 18px
  top 0
  opacity 0
  border-radius 4px
  padding 2px 4px
  &:checked
    & ~ div
      &.sheet-show-bond-links
        display flex
        flex-flow row wrap
        show-hide()
    & ~ span
      &.sheet-show-bond-links
        border-radius 4px
        padding 2px 4px
        border 1px solid
        background-color #4C4D4F
        color #fff
  &:hover
    & ~ span
      &.sheet-show-bond-links
        border-radius 4px
        padding 2px 4px
        background-color #ccc
        color #4c4d4f
        transition 0.5s ease


.sheet-links
  margin-top 1em
  display flex
  justify-content space-between
  width 100%

.sheet-link
  width 18em

div.bond-title
  text-align center
  color #4c4d4f
  padding 0.1em
  text-transform uppercase

.sheet-link-box-back
  text-align center

.sheet-link-box-input:hover ~ .sheet-link-box-back
  background #ccc
  transition .5s ease

.sheet-link-box-input:checked ~ .sheet-link-box-back
  background #4C4D4F
  color white
  transition .5s ease

.sheet-link-label
  cursor pointer

.sheet-link-container
  margin-bottom 1em

.sheet-link-box
  border 2px solid #4c4d4f
  margin-top 0.2em
  label
    padding 0
    margin 0

label.sheet-link-button
  border 2px solid
  padding 0
  margin 0
  width auto
  font-size 14px
  cursor pointer

.sheet-link-details
  padding 1em
  border 2px solid #4c4d4f

input.sheet-link-button:checked ~ .sheet-link-button-back:after
  content 'Primary'

.sheet-link-button-back span
  display none

.sheet-link-button-back:after
  content 'Secondary'

.sheet-individual-nav
  display flex
  justify-content space-between

.sheet-bond-details-btn
  display flex
  width 49%
  margin 0.5em 0em 0em 0em
  height auto
  padding 0
  font-size: 14px
  border 2px solid #4c4d4f
  cursor pointer

.sheet-link-title
  width 100%