.sheet-progress-header
  display: flex
  justify-content: space-around
  align-items: center
  margin-bottom: 10px

.sheet-progress
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.sheet-progress-name
  width: 100%
  font-weight: bold
  font-size: 14px

input.sheet-progress-name
  background: #E6E7E8
  border: 2px solid #494a4c
  border-radius: 0
  margin-bottom: 0.2em

.sheet-progress-input
  width: 40px
  height: 40px
  font-size: 22px
  font-weight: bold
  background: transparent
  text-align: center
  justify-content: center
  align-items: center
  padding: 2px 0px 0px 12px
  margin-bottom: 0.4em
  cursor: pointer
  border: 2px solid #4C4D4F
  border-radius: 0
  &:hover
    background-color: #ccc
    transition .5s ease
  &:focus
    outline 3px solid #ffdd00
    outline-offset 0s
    box-shadow inset 0 0 0 2px

