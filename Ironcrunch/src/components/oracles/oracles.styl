.sheet-oracle-container
  display flex
  opacity 1
  font-family Montserrat, Verdana, Arial, sans-serif
  font-size 1em
  font-weight bold
  justify-content space-between

.sheet-oracle-column
  display flex
  flex-direction column
  margin-right 10px
  width min-content

.sheet-theme-outline
  border: 1px solid #4C4D4F

span.sheet-oracle-result
  width: 36em

.sheet-oracle-box
  border: 2px solid #4C4D4F
  box-sizing: border-box
  width: 100%

.sheet-oracle-box:nth-child(n+2)
  margin-top: 10px

.sheet-oracle-title
  background-color: #4C4D4F
  color: #fff
  border-bottom: 1px solid #4C4D4F
  font-size: 1.4em
  font-weight: bold
  padding-left: 5px
  padding-right: 5px
  text-transform: uppercase
  width: 12.3em

.sheet-oracle-table-preview
  width: auto

.sheet-oracle-show
  display inline-flex
  font-size 1em
  margin 0em
  padding 0.3em

.sheet-oracle-show:hover
  background #969696
  cursor pointer
  transition .5s ease

.sheet-column-wrap
  flex-flow column wrap
  width 22.5em

.sheet-oracle-table
  border 2px solid #4C4D4F

.sheet-oracle-table-2-column-group
  display: flex

.sheet-oracle-table-2-column
  flex-flow column wrap
  height 48em
  display flex
  width 45em
  

.sheet-oracle-table-3-column
  flex-flow: column wrap
  height: 63em
  display: flex

.sheet-oracle-table-4-column
  flex-flow: column wrap
  height: 93em
  display: flex

.sheet-oracle-result-4-column
  width: 22em

.sheet-oracle-row:nth-child(2n+1),
.sheet-oracle:nth-child(2n+1)
  background-color: #ddd

.sheet-oracle-row
  padding: 3px 5px 3px 5px
  display: flex
  height: auto

.sheet-oracle-row-2-column
  width: 21.7em

.sheet-oracle-row-3-column
  width: 14.2em

.sheet-oracle-row-4-column
  width: 10.47em

.sheet-oracle-result-3-column
  width: 8em

.sheet-oracle-roll
  width: 15%

.sheet-oracle-roll-2-column
  width: 45%

.sheet-oracle-roll-4-column
  width: 109%

.sheet-oracle-footer
  background-color: #434b4d
  color: #ffffff
