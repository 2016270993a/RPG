- var motivations = [
  { id: '', text: '' }
]

div.sheet-motivations
  fieldset.repeating_motivations
    div.sheet-motivation
      select(class='sheet-motivation-dropdown' name='attr_motivation_select')
        option(value='' disabled selected) SELECT
          each motivation in motivations
            option(value=motivation.id)=motivation.text

      each motivation in motivations
        input(type='checkbox' class='sheet-asset-companion sheet-hide' name=`attr_motivation_${motivation.id}`)
        div(class=`sheet-motivation-${motivation.id} sheet-hide`)