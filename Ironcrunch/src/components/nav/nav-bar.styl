.sheet-nav-bar
  display flex
  justify-content space-evenly
  margin-top 0.5em
  flex-flow column

.sheet-nav-child
  border 2px solid #4C4D4F
  width 100%
  text-align-last center
  margin: 0.1em;
  label
    margin 0
    padding 0
    cursor pointer
    &:hover
      background #ccc
      transition: .5s ease;

.sheet-page-button-back
  padding 0.1em 0em 0.1em 0em
  font-weight 600

.sheet-page-button:checked ~ div.sheet-page-button-back
  background #4C4D4F
  color: white
  transition: .5s ease;

.sheet-summary
  margin-top 1em

.sheet-nav-row
  display flex
