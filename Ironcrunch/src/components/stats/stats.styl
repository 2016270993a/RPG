.sheet-stats
  display: flex
  justify-content: space-evenly
  align-items: center
  border-radius: 0%
  margin-bottom 1em
  margin-top 1em

.sheet-stat
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.sheet-stats-title
  width: 100px

.sheet-stats-input
  font-weight: bold
  width: 60px
  line-height: 40px
  font-size: 28px
  text-align: center
  background: transparent
  height: 50px !important
  border: 2px solid #4C4D4F
  border-radius: 0

label.sheet-roll-label
  margin 0
  padding 0em 0.4em 0em 0.4em
  width auto
  border 2px solid #4C4D4F
  cursor pointer
  &:hover
    background #ccc