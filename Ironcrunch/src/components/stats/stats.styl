.sheet-stats
  display: flex
  justify-content: space-evenly
  align-items: center
  border-radius: 0%
  margin-bottom: 2px
  margin-top 1em

.sheet-stat
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.sheet-stats-title
  width: 100px

.sheet-stats-input
  font-weight: bold
  width: 60px
  line-height: 40px
  font-size: 28px
  text-align: center
  background: transparent
  height: 50px !important
  border: 2px solid #4C4D4F
  border-radius: 0