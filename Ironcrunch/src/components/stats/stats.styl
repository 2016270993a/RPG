.sheet-stats
  justify-content: space-evenly
  align-items: center
  border-radius: 0%
  margin-bottom 1em

.sheet-stat
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  margin 1em

.sheet-stats-title
  width: 100px

.sheet-stats-input
  font-weight: bold
  width: 60px
  line-height: 40px
  font-size: 28px
  text-align: center
  height: 50px !important
  border-radius: 0

input.sheet-stats-input
  border: 2px solid #4C4D4F
  background:#e6e7e8
  &:focus
    outline 3px solid #ffdd00
    outline-offset 0s
    box-shadow inset 0 0 0 2px

label.sheet-roll-label
  margin 0
  padding 0em 0.4em 0em 0.4em
  width auto
  border 2px solid #4C4D4F
  cursor pointer
  text-align: center
  &:hover
    background #ccc
    transition .5s ease

input[type=radio].sheet-stat-set:checked ~ div.sheet-stat-set
  opacity 1
  height auto
  display flex
  width auto
  margin-left 5em

input[type=radio].sheet-stat-edit:checked ~ div.sheet-stat-edit
  opacity 1
  height auto
  display flex
  width auto

label.sheet-stat-toggle
  margin 0
  padding 0
  border 2px solid #4c4d4f
  text-align center
  cursor pointer
  &:hover
    background #ccc
    transition .5s ease

div.sheet-stat-toggle.sheet-set-toggle
  width 100%
  height 0
  margin 4em 1em 0em 1em

div.sheet-stat-toggle.sheet-edit-toggle
  transform rotate(90deg)
  width 100%
  height 0
  margin-top 3.45em