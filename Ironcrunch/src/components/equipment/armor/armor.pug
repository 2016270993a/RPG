mixin armor
  .sheet-equipment-component
    .sheet-equipment-container.sheet-table-header
      .sheet-equipment-container-child
        p.sheet-equipment-title TYPE
      .sheet-equipment-container-child
        p.sheet-equipment-title CLASS
      .sheet-equipment-container-child
        p.sheet-equipment-title PROTECTION
      .sheet-equipment-container-child
        p.sheet-equipment-title ADDITION
      .sheet-equipment-container-child
        p.sheet-equipment-title WEIGHT
    fieldset.repeating_armor
      .sheet-equipment-container
        .sheet-equipment-container-child
          input(type='text' class='sheet-armor-type' name='attr_armor_type' placeholder='Type')
        .sheet-equipment-container-child
          label.sheet-common-btn.sheet-equipment-table-btn
            input(type='radio' class='sheet-hide sheet-btn-input sheet-armor-class' name='attr_armor_class' value='light' checked)
            .sheet-btn-content.sheet-equipment-table-btn LIGHT
          label.sheet-common-btn.sheet-equipment-table-btn
            input(type='radio' class='sheet-hide sheet-btn-input sheet-armor-class' name='attr_armor_class' value='heavy')
            .sheet-btn-content.sheet-equipment-table-btn HEAVY
        .sheet-equipment-container-child
          input(type='text' class='sheet-armor-protection' name='attr_armor_protection' placeholder='0')
        .sheet-equipment-container-child
          input(type='text' class='sheet-armor-addition' name='attr_armor_addition' placeholder='0')
        .sheet-equipment-container-child
          input(type='text' class='sheet-armor-weight' name='attr_armor_weight' placeholder='0')