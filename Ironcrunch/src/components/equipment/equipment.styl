.sheet-equipment-container
  display flex
  flex-flow row
  justify-content space-evenly
  border-bottom 1px solid #4C4D4F
  font-family 'Crimson Text', Arial, sans-serif
  input[type=text]
    width 100%
    border 0
    padding 0
  .sheet-common-btn
    margin 0

.sheet-equipment-container-child
  width 15%
  display flex

.sheet-equipment-title
  margin 0

.sheet-table-header
  border-bottom 2px solid #4C4D4F

label.sheet-equipment-table-btn
  border 0
  border-left 2px solid #4C4D4F
  border-right 2px solid #4C4D4F

div.sheet-equipment-table-btn
  font-size 12px
  padding 0.2em 0.1em 0.1em 0.1em