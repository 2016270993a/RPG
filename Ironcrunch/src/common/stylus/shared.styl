btn()
  display flex
  width fit-content
  font-size 14px
  padding 0
  border 2px solid #494a4c
  cursor pointer
  width -moz-fit-content

input-highlight(shadow)
  outline 3px solid #fd0
  outline-offset 0
  box-shadow inset 0 0 0 shadow

show-hide()
 height auto
 opacity 1

borderCommon()
  border 2px solid #4C4D4F

dark()
  background #4C4D4F
  color white
