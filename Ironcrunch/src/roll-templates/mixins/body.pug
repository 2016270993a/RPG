mixin challengeDice
  div.sheet-result-body.sheet-result-row
    div Challenge Dice: 
    div {{challenge1}} {{challenge2}}

mixin actionBody
  div.sheet-result-body.sheet-result-row
    div Action Score: 
    div {{action}}
  +challengeDice

mixin vowBody
  div.sheet-result-body.sheet-result-row
    div Vow Progress: 
    div {{vow}}
  +challengeDice