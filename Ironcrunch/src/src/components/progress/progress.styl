.sheet-progress-header
  display: flex
  justify-content: space-around
  align-items: center
  margin-bottom: 10px

.sheet-progress
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.sheet-progress-name
  width: 100%
  font-family: arial, sans-serif
  font-weight: bold
  font-size: 14px

input.sheet-progress-name
  background: #E6E7E8
  border: 2px solid #494a4c
  border-radius: 0
  margin-bottom: 0.2em