include ./tracks.pug
div.sheet-resources
  div
    h2.sheet-resource-title Health
    img
    input(type='text' class="sheet-health-value" name="attr_health" value="20")
    div.sheet-health-status-box
      h3.sheet-health-max MAX
      h3.sheet-health-max-value
        span(name='attr_max_health')
        input(type='text' class='sheet-hide' name='attr_max_health' value='20')
      label.sheet-health-reset Reset Health
        input(type="checkbox" class="sheet-health-reset sheet-hide" name="attr_health_reset")

  div
    h2.sheet-resource-title Spirit
    img
    select(name='attr_spirit')
      each val in trackValuesTen
        option(value=val)=`+${val}`

  div
    h2.sheet-resource-title Supply
    img
    select(name='attr_supply')
      each val  in trackValuesTen
        option(value=val)=`+${val}`
  
  div
    h2.sheet-resource-title Wealth
    img
    select(name='attr_wealth')
      each val  in trackValuesTen
        option(value=val)=`+${val}`

  div
    h2.sheet-resource-title Load
    img
    select(name='attr_load')
      each val in trackValuesTwelve
        option(value=val)=val